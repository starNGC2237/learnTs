{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    // 不生成编译文件
    "noEmit": false,
    // 不生成编译文件（有错误时）
    "noEmitOnError": true,
    // 严格检查总开关
    "strict": false,
    "alwaysStrict": true,
    // 不允许隐式any
    "noImplicitAny": true,
    // 不允许不明确类型的this
    "noImplicitThis": true,
    // 严格检查空值
    "strictNullChecks": true,

  }
}
